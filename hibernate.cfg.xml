<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- Database connection settings -->
<!-- 		<property name="hibernate.connection.datasource"> -->
<!-- 			java:/comp/env/jdbc/orderchief -->
<!-- 		</property> -->
		<property name="connection.driver.class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/orderchief</property>
		<property name="connection.username">root</property>
		<property name="connection.password">password</property>


		<!-- SQL dialect -->
		<property name="dialect">
			org.hibernate.dialect.MySQL5InnoDBDialect
		</property>

		<!-- Update the database schema on startup -->
		<property name="hibernate.hhm2ddl.auto">create</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="hibernate.current_session_context_class">thread</property>

		<!-- Log all executed SQL -->
		<property name="hibernate.show_sql">true</property>

		<!-- Format SQL when printing -->
		<property name="hibernate.format_sql">true</property>

		<!-- Send SQL comments to database server -->
		<property name="hibernate.use_sql_comments">true</property>

		<!-- Use Second-level cache -->
		<property name="hibernate.cache.use_second_level_cache">true</property>

		<!-- Use Query cache -->
		<property name="hibernate.cache.use_query_cache">true</property>

		<!-- Cache provider -->
		<property name="hibernate.cache.region.factory_class">
			org.hibernate.cache.ehcache.EhCacheRegionFactory
		</property>



		<!-- Enable monitoring of our SessionFactory -->
		<property name="hibernate.generate_statistics">true</property>

		<!-- Map all of our Hibernate-managed entity classes -->
		<mapping class="com.orderchief.domain.Product" />
		
		
	</session-factory>
</hibernate-configuration>